// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id    Int     @id @default(autoincrement()) 
  email String  @unique
  name  String
  discordId String
  discordName String
  notes String?
  patreonId String?
  patreonName String?
  manager Int?
  role Int @default(1000)
  licences Licence[]
}

model Licence {
  id    Int     @default(autoincrement()) @id
  licenceKey String @unique
  status Int @default(2000)
  expirationDate DateTime

  player Player @relation(fields: [playerId], references: [id]) 
  playerId Int

  featureMask String @default("ffffffff")
  hashes String @default("[]")
}

model Client {
  id    Int     @default(autoincrement()) @id
  uploadDate DateTime @default(now())
  checksum String
  path String @default("")
  vrcVersion String
}

model Log_Licence {
  id    Int     @default(autoincrement()) @id
  licenceKey String @unique
  status Int
  expirationDate DateTime
  playerId Int
  featureMask String
  hashes String
  action String
  timestamp DateTime @default(now())
}

model Log_Player {
  id    Int     @id @default(autoincrement()) 
  email String  @unique
  name  String
  discordId String
  discordName String
  notes String
  patreonId String?
  patreonName String?
  manager Int?
  role Int
  action String
  timestamp DateTime @default(now())
}

